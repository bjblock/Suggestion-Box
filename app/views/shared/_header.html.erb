<header>

	<figure class="logo">
		<h1>the <span>Suggestion</span>Box</h1>
		<a href="/"></a>
	</figure>

	<div id="signin">
		<ul>
		<% if session[:user_id].blank? %>
			<li><%= link_to 'Sign Up', new_user_url %></li>
			<li><%= link_to 'Sign In', new_session_url %></li>
		<% else %>
		  <li><span>Hi, <%= User.find(session[:user_id]).name %></span></li>
			<li><%= link_to 'Account', user_url(User.find(session[:user_id])) %></li>
			<li><%= link_to 'Sign Out', signout_url %></li>
		<% end %>
		</ul>
		<div class="clear"></div>
	</div>
	
	<div class="clear"></div>
	
	<!-- <h1><a href="/"><span>The</span> Suggestion<%#= image_tag 'suggestion_box_blue-paper-hi.png' %><span>Box</span></a></h1> -->

</header>

